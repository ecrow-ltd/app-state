{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@state/*": ["src/state/*"],
      "@devtool/*": ["src/devtool/*"],
      "@reducer/*": ["src/reducer/*"]
    }
  },
  "include": ["src"]
}
